{{> layout/header}}
<div class="container" style="max-width:720px;">
    <h3 class="mt-4 mb-3">댓글 수정</h3>
    <form method="post" action="/view/posts/{{post.id}}/comments/{{comment.id}}/edit">
        {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}
        <div class="mb-3">
            <textarea name="content" class="form-control" rows="6" required>{{comment.content}}</textarea>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-secondary" href="/view/posts/{{post.id}}">취소</a>
            <button class="btn btn-primary">저장</button>
        </div>
    </form>
</div>
{{> layout/footer}}