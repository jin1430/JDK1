{{> layout/header}}

<div class="container mt-5 mb-5" style="max-width:640px;">
    <h2 class="fw-bold mb-4 text-center">비밀번호 변경</h2>
    <form action="/view/mypage/change-password" method="post" class="card p-4 shadow-sm">
        <input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}">

        <div class="mb-3">
            <label class="form-label">현재 비밀번호</label>
            <input type="password" name="currentPassword" class="form-control" required>
        </div>
        <div class="mb-3">
            <label class="form-label">새 비밀번호</label>
            <input type="password" name="newPassword" class="form-control" required>
        </div>

        {{#error}}<div class="alert alert-danger">{{error}}</div>{{/error}}
        {{#passwordChanged}}<div class="alert alert-success">비밀번호가 변경되었습니다.</div>{{/passwordChanged}}

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">변경</button>
            <a href="/view/mypage" class="btn btn-secondary">취소</a>
        </div>
    </form>
</div>

{{> layout/footer}}
