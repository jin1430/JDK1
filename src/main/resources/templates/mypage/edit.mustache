{{> layout/header}}

<div class="container mt-5 mb-5">
    <h2 class="fw-bold mb-4 text-center">내 정보 수정</h2>
    <div class="row">
        <!-- 왼쪽 네비게이션 -->
        <div class="col-md-3">
            <div class="list-group shadow-sm">
                <a href="/view/mypage" class="list-group-item list-group-item-action">- 내 정보</a>
                <a href="/view/mypage/edit" class="list-group-item list-group-item-action fw-bold">- 정보 수정</a>
                <a href="/view/mypage/change-password" class="list-group-item list-group-item-action">- 비밀번호 변경</a>
                <a href="/view/mypage/withdraw" class="list-group-item list-group-item-action">- 회원 탈퇴</a>
                <a href="/view/mypage/posts" class="list-group-item list-group-item-action">- 내가 쓴 글</a>
                {{#isLawyer}}
                    <a href="/view/mypage/comments" class="list-group-item list-group-item-action">- 내가 쓴 댓글</a>
                {{/isLawyer}}
            </div>
        </div>

        <!-- 오른쪽 메인 콘텐츠 -->
        <div class="col-md-9">
            <form action="/view/mypage/edit" method="post" class="card p-4 shadow-sm">
                <input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}">

                <div class="mb-3">
                    <label class="form-label">이메일</label>
                    <input type="text" class="form-control" value="{{user.email}}" readonly>
                </div>

                <div class="mb-3">
                    <label class="form-label">이름</label>
                    <input type="text" name="name" class="form-control" value="{{user.username}}" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">주소</label>
                    <input type="text" name="address" class="form-control" value="{{user.address}}">
                </div>

                <div class="mb-3">
                    <label class="form-label">새 비밀번호 (선택)</label>
                    <input type="password" name="password" class="form-control" placeholder="변경 시에만 입력">
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">저장</button>
                    <a href="/view/mypage" class="btn btn-secondary">취소</a>
                </div>
            </form>
        </div>
    </div>
</div>

{{> layout/footer}}
