{{> layout/header}}

<div class="container mt-5" style="max-width: 700px;">
    <h2 class="fw-bold mb-4 text-center">글 수정</h2>

    <form method="post" action="/view/posts/{{post.id}}/edit">
        <input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}">

        <div class="mb-3">
            <label class="form-label">제목</label>
            <input type="text" name="title" class="form-control" value="{{post.title}}" required>
        </div>

        <div class="mb-3">
            <label class="form-label">내용</label>
            <textarea name="content" class="form-control" rows="8" required>{{post.content}}</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">카테고리</label>
            <select name="crimeCategory" class="form-select" required>
                {{#categories}}
                    <option value="{{value}}" {{#selected}}selected{{/selected}}>{{label}}</option>
                {{/categories}}
            </select>
        </div>

        <div class="text-center mt-4 d-grid">
            <button class="btn btn-primary">수정 완료</button>
        </div>
    </form>
</div>

{{> layout/footer}}
